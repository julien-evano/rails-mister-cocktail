<h1><%= @cocktail.name %></h1>

<h2>Ingredients</h2>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> - <%= dose.ingredient.name %> - <%= link_to "Supprimer", dose_path(dose), method: :delete %> </li>
  <% end %>
</ul>

<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %>
